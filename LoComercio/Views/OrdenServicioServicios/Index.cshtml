@model IEnumerable<LoDesbloqueo.Data.OrdenServicioServicio>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="col-md-12 col-centered">

    <div class="container">
        <form asp-controller="OrdenServicioServicios" asp-action="Create">
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Servicio
                            </th>
                            <th>
                                Edo Servicio
                            </th>
                            <th>
                                Precio
                            </th>
                            <th>
                                Tecnico
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Servicio.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdEdoServicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PrecioServicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdTecnico)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <input type="submit" class="btn btn-primary" value="Agregar" />
            </div>
        </form>
    </div>
</div>
