@model LoDesbloqueo.Data.Pago

@{
    ViewData["Title"] = "Crear";
}

<h2>Crear</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Pago</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Anticipo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Anticipo" class="form-control" />
                <span asp-validation-for="Anticipo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Fecha" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IdFormaPago" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="IdFormaPago" class ="form-control" asp-items="ViewBag.IdFormaPago"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Monto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
