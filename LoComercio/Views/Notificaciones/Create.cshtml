@model LoDesbloqueo.Data.Notificacion

@{
    ViewData["Title"] = "Crear";
}

<h2>Crear</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Notificacion</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Fecha" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IdOrdenServicio" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="IdOrdenServicio" class ="form-control" asp-items="ViewBag.IdOrdenServicio"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IdTipoNotificacion" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="IdTipoNotificacion" class ="form-control" asp-items="ViewBag.IdTipoNotificacion"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="NotificacionActiva" />
                    <label asp-for="NotificacionActiva"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
