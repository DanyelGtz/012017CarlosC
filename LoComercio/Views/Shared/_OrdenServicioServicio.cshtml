@model IEnumerable<LoDesbloqueo.Data.OrdenServicioServicio>

@{
    ViewData["Title"] = "Index";
}


<div class="col-md-12 col-centered">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h2 class="panel-title">Servicios</h2>
        </div>
        <div class="panel-body">
            <div class="container">
                <form asp-controller="OrdenServicioServicios" asp-action="Create">
                    <div class="row">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Servicio
                                    </th>
                                    <th>
                                        Edo Servicio
                                    </th>
                                    <th>
                                        Precio
                                    </th>
                                    <th>
                                        Tecnico
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @foreach (var servicio in ViewBag.IdServicio)
                                        {
                                            if (int.Parse(servicio.Value)==item.IdServicio)
                                            {
                                                <td>
                                                    @servicio.Text
                                                </td>
                                            }
                                        }
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EstadoServicio.Nombre)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrecioServicio)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tecnico.Nombre)
                                        </td>
                                        <td><a asp-controller="OrdenServicioServicios" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-xs btn-warning">Modificar</a> |
                                            <a asp-controller="OrdenServicioServicios" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-xs btn-danger">Eliminar</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>