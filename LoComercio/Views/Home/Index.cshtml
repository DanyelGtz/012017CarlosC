@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Iniciar Sesion";
}

<div class="flag-banner" style="background-image: url(http://hibult-static.websplanetdemo.com/var/m_e/eb/eb6/35498/552486-servicio-tecnico-nokia-lumia-banner.png); /* margin-top:46px; */ min-height: 300px; background-size: cover;">
